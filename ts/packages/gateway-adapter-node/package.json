{
    "name": "@polyglot-llm-gateway/gateway-adapter-node",
    "version": "0.1.0",
    "description": "Node.js adapter for polyglot-llm-gateway",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest run",
        "lint": "eslint src/",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@polyglot-llm-gateway/gateway-core": "workspace:*",
        "yaml": "^2.8.2"
    },
    "devDependencies": {
        "@types/node": "^22.10.1",
        "typescript": "^5.7.2",
        "vitest": "^2.1.8"
    },
    "keywords": [
        "nodejs",
        "llm",
        "gateway"
    ],
    "license": "MIT"
}